version: '3.8'

x-dev:
  &proxy_conf
  http_proxy: "${HTTP_PROXY}"
  https_proxy: "${HTTPS_PROXY}"

services:
  apps:
    container_name: ${APP_NAME}
    build:
      context: .
      dockerfile: Dockerfile
      args: *proxy_conf
    environment:
      CHOKIDAR_USEPOLLING: "true"
      http_proxy: "${HTTP_PROXY}"
      https_proxy: "${HTTPS_PROXY}"
    image: ${APP_NAME}
    volumes:
      - ./:/app
      - /app/node_modules
    ports:
      - 3012:3000
    restart: always
    command: tail -f /dev/null